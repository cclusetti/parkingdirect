<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:id="@+id/relativeLayout1" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView android:id="@+id/cheapestTextView" android:textColor="@android:color/black" android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/nextCheapestButton" android:layout_toRightOf="@+id/previousCheapestButton" android:layout_alignBottom="@+id/previousCheapestButton"></TextView>
