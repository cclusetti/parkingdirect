        <Button
            android:id="@+id/nextCheapestButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/right" >

</Button>
    </RelativeLayout>
    